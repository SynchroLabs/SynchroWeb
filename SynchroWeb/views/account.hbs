{{#content "pageStyles" }}
    {{> formstyles}}
{{/content}}

<div class="container">
    {{> flash}}
    <form class="form-horizontal" role="form" action="/account" method="post">
        <h3>Email Address</h3>
        <div class="form-group">
            <label class="col-sm-2 control-label">Address</label>
            <div class="col-sm-6">
                <p class="form-control-static">{{session.email}}
                {{#if user.verified}}
                 - verified
                {{else}}
                - not verified
                {{/if}}
                </p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                {{#unless user.verified}}
                <a href="/verify" class="btn btn-primary" style="margin-bottom: 4px" role="button">Enter Verification Code</a>
                <a href="/resend" class="btn btn-primary" style="margin-bottom: 4px" role="button">Resend Verification</a>
                {{/unless}}
                <a href="/changeemail" class="btn btn-primary" style="margin-bottom: 4px" role="button">Change Email Address</a>
            </div>
        </div>
        <h3 class="form-account-heading">Account Details</h3>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="name">Name</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="name" value="{{post.name}}">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="organization">Organization</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="organization" value="{{post.organization}}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-6">
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
        </div>
        <h3>Security</h3>
        <div class="form-group">
            <label class="col-sm-2 control-label">Download Token</label>
            <div class="col-sm-6">
                <p class="form-control-static">{{user.secret}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Password</label>
            <div class="col-sm-6">
                <a href="/changepass" class="btn btn-primary" role="button">Change Password</a>
            </div>
        </div>
    </form>
</div> <!-- /container -->